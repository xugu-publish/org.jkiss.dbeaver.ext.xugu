    <extension point="org.eclipse.ui.handlers">
        <handler commandId="org.jkiss.dbeaver.ext.xugu.code.compile" class="org.jkiss.dbeaver.ext.xugu.actions.CompileHandler">
            <enabledWhen>
                <or>
                    <with variable="selection">
                        <count value="+"/>
                        <iterate operator="and">
                            <!-- Here and below we use double check - adapt + instanceof.
                                sing <adapt> with final (Xugu-specific) type will force plugin activation (since E4.6)
                                see https://bugs.eclipse.org/bugs/show_bug.cgi?id=485569
                            -->
                            <adapt type="org.jkiss.dbeaver.model.struct.DBSObject">
                                <instanceof value="org.jkiss.dbeaver.ext.xugu.model.source.XuguSourceObject"/>
                            </adapt>
                        </iterate>
                    </with>
                    <with variable="activePart">
                        <adapt type="org.jkiss.dbeaver.model.struct.DBSObject">
                            <instanceof value="org.jkiss.dbeaver.ext.xugu.model.source.XuguSourceObject"/>
                        </adapt>
                    </with>
                </or>
            </enabledWhen>
        </handler>
        <handler commandId="org.jkiss.dbeaver.ext.xugu.code.package.navigate" class="org.jkiss.dbeaver.ext.xugu.actions.PackageNavigateHandler">
            <enabledWhen>
                <with variable="selection">
                    <count value="+"/>
                    <iterate operator="and">
                        <adapt type="org.jkiss.dbeaver.model.struct.DBSObject">
                            <instanceof value="org.jkiss.dbeaver.ext.xugu.model.XuguProcedurePackaged"/>
