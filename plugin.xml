                            </folder>
                            <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguPrivObject" label="%tree.objects.node.name" icon="#permissions" description="Objects" navigable="false">
                                <items label="%tree.privilege.node.name" path="objectPriv" property="objectPrivs" icon="#privilege">
                                </items>
                            </folder>
                        </items>
                    </folder>
                    <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguRole" label="%tree.roles.node.name" icon="#folder_role" description="Roles">
                        <items label="%tree.role.node.name" path="roles" property="roles" icon="#user_group">
                            <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguPrivUser" label="%tree.users.node.name" icon="#folder_user" description="Users" navigable="false">
                                <items label="%tree.user.node.name" path="userPrivs" property="userPrivs" icon="#user">
                                </items>
                            </folder>
                            <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguPrivRole" label="%tree.roles.node.name" icon="#folder_role" description="Roles" navigable="false">
                                <items label="%tree.role.node.name" path="roles" property="rolePrivs" icon="#user_group">
                                </items>
                            </folder>
                            <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguPrivSystem" label="%tree.system_privileges.node.name" icon="#permissions" description="System Privileges" navigable="false">
                                <items label="%tree.privilege.node.name" path="sysPrivs" property="systemPrivs" icon="#privilege">
                                </items>
                            </folder>
                            <folder type="org.jkiss.dbeaver.ext.xugu.model.XuguPrivObject" label="%tree.objects.node.name" icon="#permissions" description="Objects" navigable="false">
                                <items label="%tree.privilege.node.name" path="objectPriv" property="objectPrivs" icon="#privilege">
                                </items>
                            </folder>
                        </items>
                    </folder>                  
                </folder>     
                       </items>
                        </folder>         
            </tree>

            <drivers managable="true">
                <driver
                      class="com.xugu.cloudjdbc.Driver"
                      defaultPort="5138"
                      description="Xugu JDBC driver."
                      icon="icons/xugu_icon.png"
                      id="Xugu SQL Server 10.0"
                      label="Xugu"
                      promoted="true"
                      sampleURL="jdbc:xugu://{host}[:{port}]/{database}"
                      useURL="false"
                      webURL="https://github.com/xugu-publish/jdbc-driver/tree/master/libsrc/">
                    <replace provider="generic" driver="xugu"/>
                    <replace provider="xugu" driver="xugu"/>
                    <replace provider="xugu" driver="xugu_oci"/>

                	<property name="recv_mode" value="2"/>  
                	<property name="auto_commit" value="on"/>  
                	<!-- <property name="lob_ret" value=""/> -->
                	<property name="iso_level" value="READ ONLY"/>
                	<property name="lock_timeout" value="3600000"/>
                	<property name="return_rowid" value="false"/>
                	<property name="sql_cursor" value="sql_cursor"/>
                	<property name="isCompatible" value="false"/> 
                	<!--	<property name="iscompatibleqx" value="false"/> -->
               		<!--	<property name="ips" value=""/> -->
                    <property name="char_set" value="utf8"/> 

                    <!--<file path="maven:/com.Xugu.jdbc:ojdbc8:RELEASE" type="jar"/>-->

                    <fileSource url="https://github.com/xugu-publish/jdbc-driver/tree/master/libsrc" name="Xugu 10 drivers">
                        <file name="cloudjdbc-10.0.0.jar" description="Xugu JDBC driver."/>
                    </fileSource>
                   
                    <file type="license" path="drivers/xugu/LICENSE.txt" bundle="drivers.xugu"/>
                    <file type="jar" path="drivers/xugu/cloudjdbc-10.0.0.jar" bundle="drivers.xugu"/>

                </driver>
            </drivers>
            <templates>
                <resolver type="SYSDBA" class="org.jkiss.dbeaver.ext.xugu.model.resolvers.XuguUserResolver" description="Current Xugu user"/>
            </templates>
        </datasource>
